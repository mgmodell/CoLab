#/bin/bash

if ! grep -q "S3_BUCKET_NAME" ~/.zshrc; then
	echo "export S3_BUCKET_NAME=colab-dev" >> ~/.zshrc
	echo "export AWS_ACCESS_KEY_ID=XXXXXXX" >> ~/.zshrc
	echo "export AWS_SECRET_ACCESS_KEY=XXXXXXX" >> ~/.zshrc
	echo "export AWS_REGION=ap-northeast-2" >> ~/.zshrc
	echo "export DISPLAY=:0" >> ~/.zshrc
	echo "export LIBGL_ALWAYS_INDIRECT=1" >> ~/.zshrc
fi

echo 'We will now install ruby using rvm'
echo 'Please watch the output as it may ask'
echo 'for your password, but it may be buried'
echo 'in other text. Please watch for it and'
echo 'type it in and then press enter. There will'
echo 'be no on-screen output'
echo ''
rvm install "ruby-2.6.5"

echo 'Run the following command 3 times'
echo 'cd .'
echo ''
echo 'Then run'
echo '/bin/sh setup_part_3'
