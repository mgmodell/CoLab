<%= simple_form_for @experience do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :course %>
    <%= f.input :name %>
    <%= f.check_box :active %>
    <%= f.input :start_date, as: :datetime %>
    <%= f.input :end_date, as: :datetime %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
