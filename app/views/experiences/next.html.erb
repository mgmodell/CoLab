<div style="display: none" id="s_id"><%= @diagnosis.week.narrative.scenario_id %></div>
<div style="display: none" id="w_num"><%= @diagnosis.week.week_num %></div>
<div class="ui-corner-all custom-corners">
  <div class="ui-bar ui-bar-a">
    <h3><%= t '.journal', week_num: @diagnosis.week.week_num %></h3>
  </div>
  <div class="ui-body ui-body-a">
    <%= @diagnosis.week.text.html_safe %>
  </div>
</div>
<br>
<hr>
<%= simple_form_for @diagnosis, :url => { :controller => "experiences", :action => "diagnose" }, :method => :get do |f| %>
  <%= f.hidden_field :week_id, value: @diagnosis.week_id  %>
  <%= f.hidden_field :reaction_id, value: @diagnosis.reaction.id  %>
  <% if @diagnosis.errors.any? && @diagnosis.errors[:behavior ].count > 0 %>
    <p class='error'><%= @diagnosis.errors[ :behavior ].first %></p>
  <% end %>
  <div class="ui-corner-all custom-corners">
    <div class="ui-bar ui-bar-a">
      <h3><%= t '.prompt' %></h3>
    </div>
    <div class="ui-body ui-body-a">
      <%= f.association :behavior, :collection => Behavior.all, :as => :radio_buttons, label: false, :error => false %>
      <% if @diagnosis.errors.any? && @diagnosis.errors[ :other_name ].count > 0 %>
        <div id="other_name_panel">
          <p class='error'><%= @diagnosis.errors[ :other_name ].first %></p>
        <% else %>
          <div style="display: none" id="other_name_panel">
          <% end %>
          <%= f.input :other_name, label: (t '.other') %><br>
        </div>
      </div>
    </div>
    <div data-role="collapsible">
      <h3><%= t '.click_for_comment' %></h3>
      <%= f.input :comment, as: :text, size: "24x6", label: ( t '.comments' ) %>
    </div>
    <br>
    <br>
    <%= f.submit t '.save_and_continue'  %>
  <% end %>
