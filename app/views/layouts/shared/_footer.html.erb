    <% theme_code = @current_user.nil? ? "a" : @current_user.theme.code  %>
    <div data-role="footer" data-position="fixed" data-theme="<%= theme_code %>">
      <div class="ui-grid-a">
        <div class="ui-block-a">
          <div data-role="controlgroup" data-type="horizontal" data-mini="true">
            <% unless @current_location == "home" %>
              <%= link_to "Home", root_path,
                  :data => { :icon => "home", :role => "button" } %>
            <% end %>
            <% unless @current_user.nil? || @current_location == "profile"  %>
              <%= link_to 'Profile', edit_user_registration_path(@current_user),
                  :data => { :icon => "user", :role => "button" } %>
            <% end %>
            <% if !@current_user.nil? %>
              <% if @current_user.is_instructor? %>
                <a href="#adminMenu" data-rel="popup" data-transition="fade"
                       class="ui-btn ui-corner-all ui-shadow ui-btn-inline ui-icon-gear ui-btn-icon-left ui-btn-<%= theme_code %>">Admin&hellip;</a>
                  <div data-role="popup" id="adminMenu" data-theme="<%= theme_code %>">
                    <ul data-role="listview" data-inset="true" >
                    <li>
                      <%= link_to "Reports", graphing_path,
                        :data => { :icon => "bullets" } %>
                    </li>
                    <li>
                      <%= link_to "Admin", admin_path,
                        :data => { :icon => "gear" } %>
                    </li>
                    </ul>
                  </div>
              <% end %>
              <%= link_to 'Logout', destroy_user_session_path, :method => :delete,
                  :data => { :icon => "power", :role => "button" } %>
            <% end %>
          </div>
        </div>
        <div class="ui-block-b">
          <div data-role="controlgroup" data-type="horizontal" data-mini="true" align="right">

            <% if @current_user.nil? || @current_location == "home" %>
            <%= link_to "Demo", demo_start_path,
                  :data => { :icon => "action", :role => "button" } %>
            <% end %>
            <%= mail_to "support@CoLab.onlin", "Support",
                  :subject => "SAPA Support Request",
                  :data => { :icon => "mail", :role => "button" } %>
            <%= link_to "About", "https://www.PeerAssess.info",
                  :data => { :icon => "info", :role => "button" } %>
          </div>
        </div>
      </div>
    </div>
