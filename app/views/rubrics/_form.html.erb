<%= simple_form_for(@rubric) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :passing %>
    <%= f.input :version %>
    <%= f.input :published %>
    <%= f.input :parent %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
