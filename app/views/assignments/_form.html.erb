<%= simple_form_for(@assignment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :open %>
    <%= f.input :close %>
    <%= f.association :rubric %>
    <%= f.input :group_enabled %>
    <%= f.association :course %>
    <%= f.association :project %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
