<p id="notice"><%= notice %></p>
<% theme_code = get_theme_code
   anonymize = get_anonymous %>
<div data-role="tabs" id="tabs">
  <div data-role="navbar">
    <ul>
      <li><a href="#details" data-ajax="false"><%= t :details %></a></li>
      <li><a href="#courses" data-ajax="false"><%= t 'courses.courses' %></a></li>
    </ul>
  </div>
  <div id="details" class="ui-body-<%= theme_code %> ui-content">
    <h3><%= t('.title')%></h3>
    <p>
      <h3><%= t(:name)%>:</h3>
      <%= @school.get_name( anonymize ) %>
    </p>
    <p>
      <h3><%= t :description %>:</h3>
      <%= raw( @school.description ) %>
    </p>
    <%= link_to t('.edit_string'), edit_school_path(@school) %>
  </div>
  <div id="courses" class="ui-body-<%= theme_code %> ui-content">
    <p>
      <h3><%= t 'courses.courses' %></h3>
      <% if @school.bingo_games.count < 1 %>
        <%= t 'schools.no_courses' %></br>
    <% else %>
      <table data-role="table"
          id="course_table"
          data-mode="columntoggle"
          data-column-btn-theme="<%= theme_code %>"
          data-column-btn-text="<%= t :column_select %>"
          class="table-stroke ui-shadow table-stripe table-ui-responsive ">
        <thead>
          <tr>
            <th><%= t :name %></th>
            <th><%= t :number %></th>
            <th data-priority="1"><%= t :instructors %></th>
            <th data-priority="0"><%= t :students %></th>
            <th data-priority="1"><%= t 'projects.projects' %></th>
            <th data-priority="1"><%= t :exps %></th>
            <th data-priority="1"><%= t :terms_lists %></th>
            <th data-priority="0">Start Date</th>
            <th data-priority="0">End Date</th>
            <th data-priority="1"><%= t :actions %></th>
          </tr>
        </thead>
        <tbody>
          <% @school.courses.each do |course| %>
            <tr>
              <td><%= link_to course.get_name( anonymize ), course %></td>
              <td><%= course.get_number( anonymize ) %></td>
              <td><%= course.instructors.count %></td>
              <td><%= course.enrolled_students.count %></td>
              <td><%= course.projects.count %></td>
              <td><%= course.experiences.count %></td>
              <td><%= course.bingo_games.count %></td>
              <td>
                <div hidden>
                  <%= l in_tz( date: course.start_date ), format: :datestamp %>
                </div>
                <%= l course.start_date, format: :tz_clarity %>
              </td>
              <td>
                <div hidden>
                  <%= l in_tz( date: course.end_date ), format: :datestamp %>
                </div>
                <%= l course.end_date, format: :tz_clarity %>
              </td>
              <td><%= link_to t(:show), course %>&nbsp;|&nbsp;
                <%= link_to t(:edit), edit_course_path(course) %>&nbsp;|&nbsp;
                <%= link_to t( :destroy ), course, method: :delete, data: { confirm: t( :confirmation) } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
    <%= link_to t( 'schools.new.title'), new_course_path( :school_id => @school.id ),
      :data => { :icon => "plus", :inline => "true",:mini => "true",  :role => "button" }%>
  </p>
</div>
</div>
<%= link_to t( 'schools.back'), schools_path %>
